# focus space
alt - 1: yabai -m space --focus 1
alt - 2: yabai -m space --focus 2
alt - 3: yabai -m space --focus 3
alt - 4: yabai -m space --focus 4
alt - 5: yabai -m space --focus 5

# focus window
alt - i: yabai -m window --focus north
alt - j: yabai -m window --focus west
alt - k: yabai -m window --focus south
alt - l: yabai -m window --focus east

# swap managed window
shift + alt - i: yabai -m window --swap north
shift + alt - j: yabai -m window --swap west
shift + alt - k: yabai -m window --swap south
shift + alt - l: yabai -m window --swap east

# move managed window
shift + cmd - i: yabai -m window --warp north
shift + cmd - j: yabai -m window --warp west
shift + cmd - k: yabai -m window --warp south
shift + cmd - l: yabai -m window --warp east

# app shortcuts
alt - b: open -a 'Zen Browser'
alt - c: open -a 'Cursor'
alt - d: open -a 'Discord'
alt - e: open -a 'Spark Desktop'
alt - f: open -a 'Figma'
alt - h: open -a 'Hoppscotch'
alt - m: open -a 'Spotify'
alt - n: open -a 'Messenger'
alt - o: open -a 'Obsidian'
alt - r: open -a 'Raindrop.io.app'
alt - s: open -a 'Slack'
alt - t: open -a 'Things3'
alt - z: open -a 'iTerm'
