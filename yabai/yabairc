yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# bsp or float (default: float)
yabai -m config layout bsp

# Set all padding and gaps to 20pt (default: 0)
yabai -m config top_padding 8
yabai -m config bottom_padding 8
yabai -m config left_padding 8
yabai -m config right_padding 8
yabai -m config window_gap 10

# add 20 padding to the top and 0 padding to the bottom of every space located on the main display
# yabai -m config external_bar main:20:0
# add 32 padding to the top and 0 padding to the bottom of all spaces regardless of the display it belongs to
yabai -m config external_bar all:32:0

# mouse settings
# set mouse follows focus mode (default: off)
yabai -m config mouse_follows_focus on
# set mouse interaction modifier key (default: fn)
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window (default: move)
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window (default: resize)
yabai -m config mouse_action2 resize
yabai -m mouse_drop_action swap
# set focus follows mouse mode (default: off, options: off, autoraise, autofocus)
yabai -m config focus_follows_mouse autoraise

# disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculators$" manage=off

# start jankyborders
borders active_color=0xffa6da95 inactive_color=0xff494d64 width=5.0 &

# modify window shadows (default: on, options: on, off, float)
# show shadows only for floating windows
yabai -m config window_shadow float

# Override default layout for space 2 only
# yabai -m config --space 2 layout float

# New window spawns to the left if vertical split, or top if horizontal split
# yabai -m config window_placement first_child

# New window spawns to the right if vertical split, or bottom if horizontal split
# yabai -m config window_placement second_child

# Override gaps for space 2 only
# yabai -m config --space 2 window_gap 0

# on or off (default: off)
# yabai -m config auto_balance off

# Floating point value between 0 and 1 (default: 0.5)
# yabai -m config split_ratio 0.5

# window opacity (default: off)
# example: render all unfocused windows with 90% opacity
# yabai -m config window_opacity on
# yabai -m config active_window_opacity 1.0
# yabai -m config normal_window_opacity 0.9

# move apps automatically to specific spaces
yabai -m rule --add app="Visual Studio Code" space=^1
yabai -m rule --add app="Arc" space=^1
yabai -m rule --add app="Figma" space=2
yabai -m rule --add app="iTerm" space=2
yabai -m rule --add app="Things3" space=3
yabai -m rule --add app="Slack" space=3
yabai -m rule --add app="Spotify" space=4
yabai -m rule --add app="Messenger" space=4
